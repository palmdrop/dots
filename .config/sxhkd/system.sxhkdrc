# quit/restart bspwm
control + {q,r}
	bspc {quit,wm -r}; notify-send "bspwm reloaded"

# Mount control
{m,u}
	$TERMINAL -name floating -g 50x10 -e {dmount, dumount} &\
    . $XDG_CONFIG_HOME/sxhkd/normal.mode

# Lock computer
x
	lock

# Xkill
shift + x
	xkill

# System information menu
i
    sysinfo-menu

# Shutdown menu
e
	shutdownmenu

# Modes 
{alt + Escape,@Escape}
    . $XDG_CONFIG_HOME/sxhkd/normal.mode
