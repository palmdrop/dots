#/bin/bash

disk="/dev/nvme0n1p3"
size=$(df -Ph | grep $disk | awk {'print $2'})
used=$(df -Ph | grep $disk | awk {'print $3'})
avail=$(df -Ph | grep $disk | awk {'print $4'})
use=$(df -Ph | grep $disk | awk {'print $5'})

case $1 in 
    size)  echo $size  ;;
    used)  echo $used  ;;
    avail) echo $avail ;;
    use)   echo $use   ;;
    *) echo "$avail ($use used)"
esac
